<div class="pure-u-1-24 buttons-container">
  <div class="clone-btn" title="Clone"></div>
  <br/>
  <div class="delete-btn" style="display:none;" title="Delete"/>
</div>

<div class="pure-u-1-24 ad-name">
  Ad
  <% if(!isNaN(parseInt(ad.source_id))) { %>
    <div class="dfp-success"></div>
  <% } %>
</div>

<div class="pure-u-1-6">
  <div class="pure-u-1-2 start-date pull-left">
    <span class="editable date custom" data-type="date" data-name="start_date" data-date-format="yyyy-mm-dd" data-pk="1"><%= ad.start_date %></span>
  </div>

  <div class="pure-u-1-2 end-date pull-left">
    <span class="editable date custom" data-type="date" data-name="end_date" data-date-format="yyyy-mm-dd" data-pk="1"><%= ad.end_date %></span>
  </div>

  <div class="ad-<%= ad.id %> pushing-status" style="clear:both">
    <% if(!isNaN(parseInt(ad.source_id))) { %>
      <div class="dfp-success"></div> <%= ad.source_id %>
    <% } %>
  </div>
</div>

<div class="pure-u-1-6 size">
  <span class="ads-sizes">
    <%= 
      _.uniq(
        _.inject(ad.creatives.models, function(sizes, el) {
          sizes.push(el.get('ad_size'));
          return sizes;
        }, [])
      ).join(', ') 
    %>
  </span>
  <br/>
  <span class="toggle-ads-creatives-btn operation">Edit Creatives (<%= ad.creatives.length %>)</span>
</div>

<div class="pure-u-1-3 name">
  <span class="editable" data-type="text" data-pk="1" data-name="description">
    <%= ad.description %>
    <div class="errors" style="clear:both"></div>
  </span>
  <br/>
  <span class="toggle-ads-targeting-btn operation">+ Add Targeting</span>
  <div class="targeting_options_condensed" style="clear:both"></div>
</div>
  
<div class="pure-u-1-12 volume">
  <span class="editable custom" data-type="text" data-name="volume" data-pk="1">
    <%= accounting.formatNumber(ad.volume) %>
  </span>
  <div class="errors_container" style="clear:both"></div>
</div>

<div class="pure-u-1-12 rate">
  $ <span class="editable custom" data-type="text" data-name="rate" data-pk="1">
    <%= accounting.formatMoney(ad.rate, '') %>
  </span>
</div>

<div class="pure-u-1-12 media-cost">
  $ <span><%= accounting.formatMoney(ad.value, '') %></span>
</div>

<div class="targeting-container" style="display:none">
</div>

<div class="ads-creatives-list-view" style="display:none">
</div>
