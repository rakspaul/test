<div class="pure-u-1-24 clone_btn">
  <img src="/assets/clone_btn.png" alt="Clone"/>
  <br/>
  <img src="/assets/delete_btn.png" class="delete_btn" style="display:none;margin-top:10px;" alt="Delete"/>
</div>

<div class="pure-u-1-24 ad_name">Ad</div>

<div class="pure-u-1-12 start-date"><span class="editable date" data-type="date" data-pk="1"><%= ad.start_date %></span></div>

<div class="pure-u-1-12 end-date"><span class="editable date" data-type="date" data-pk="1"><%= ad.end_date %></span></div>

<div class="pure-u-1-6">
  <span class="editable" data-type="text" data-pk="1"><%= ad.ad_sizes %></span>
  <br/>
  <span class="operation">Edit Creatives</span>
</div>

<div class="pure-u-1-3 name">
  <span class="editable" data-type="text" data-pk="1" data-name="ad_name"><%= ad.name %></span>
  <br/>
  <span class="operation">+ Add Targeting</span>
</div>
  
<div class="pure-u-1-12 volume"><span class="editable" data-type="text" data-pk="1"><%= accounting.formatNumber(ad.volume) %></span></div>

<div class="pure-u-1-12 rate"><span class="editable" data-type="text" data-pk="1"><%= accounting.formatMoney(ad.rate) %></span></div>

<div class="pure-u-1-12 media-cost"><span class="editable custom" data-type="text" data-pk="1"><%= accounting.formatMoney(ad.cost) %></span></div>
