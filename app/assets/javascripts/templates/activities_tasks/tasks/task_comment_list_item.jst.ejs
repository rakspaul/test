<div class="pure-g">
    <div class="pure-u-1-5 username">
      <% if(activity_type == "user_comment") {%>
        <%= created_by %>
      <% } %>
    </div>
    <div class="pure-u-1-2 <%=activity_type == 'system_comment'?'system-comment':''%>">
      <%= note %>
      <% if(original_filename) { %>
        <p class="activity-log-subrow">
          <a href="/file_download/<%= attachment_id%>" class="task-attachment">
            <i class="attachment-type archive-icon"></i> <%= original_filename%>
          </a>
        </p>
      <% } %>
    </div>
    <div class="pure-u-1-4 date">
      <%= created_at %>
    </div>
</div>