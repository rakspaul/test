<div class="modal-body">

  <form class="form-horizontal">
    <legend>Schedule Report</legend>

    <fieldset>
      <div class="control-group">
        <label class="control-label" for="title">Title</label>
        <div class="controls">
          <input type="text" id="title" placeholder="Title" value="<%= report_schedule.title %>" required>
          <label class="help-inline form-error" id="title_error"></label>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="reportDates">Report Dates</label>
        <div class="controls">
          <input type="text" id="report_dates" placeholder="Report Dates" value="<%= report_schedule.start_date%> to <%= report_schedule.end_date%>" readonly>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Recalculate Dates</label>
        <div class="controls">
          <input type="checkbox" name="recalculateDates" id="recalculate_dates" value="option1">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="emails">Emails</label>
        <div class="controls">
          <input type="email" id="emails" placeholder="Emails" value="<%= report_schedule.emails%>" required>
          <label class="help-inline form-error" id="emails_error"></label>
        </div>
      </div>
    </fieldset>

    <legend>Reccurrence</legend>
    <fieldset>
      <div class="control-group">
        <label class="control-label" for="start_date" >Start On</label>
        <div class="controls">
          <div class="input-append date" id="report_start_date">
            <input type="text" class="date-field" placeholder="Start On" value="<%= report_schedule.report_start_date%>" readonly>
            <span class="add-on"><i class="icon-calendar"></i></span>
          </div>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Ends</label>
        <div class="controls">
          <label class="radio">
            <input type="radio" name="endsOnRadio" id="end_never_radio" value="end_never" checked> Never
          </label>
          <label class="radio">
            <input type="radio" name="endsOnRadio" id="end_date_radio" value="end_date">
            On
          </label>

          <div class="input-append date" id="report_end_date" style="display:none">
            <input type="text" class="date-field" placeholder="Ends On" value="<%= report_schedule.report_end_date%>" readonly>
            <span class="add-on"><i class="icon-calendar"></i></span>
          </div>

        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Frequency</label>

        <div class="controls">
          <label class="radio">
            <input type="radio" name="frequencyRadio" id="frequency_everyday_radio" value="everyday" checked> Everyday
          </label>

          <label class="radio">
            <input type="radio" name="frequencyRadio" id="frequency_specificdays_radio" value="specific_days">
            Specific Days
          </label>

          <div class="control-group" id="specific_days_option" style="display:none">
            <div class="controls controls-inner">
              <div class="input-append date multidate" id="report_specific_days">
                <input type="text" class="date-field" placeholder="Specific Days" readonly>
                <span class="add-on"><i class="icon-calendar"></i></span>
              </div>
            </div>
          </div>

        </div>

        <div class="controls">
          <label class="radio">
            <input type="radio" name="frequencyRadio" id="frequency_weekly_radio" value="weekly"> Weekly
          </label>

          <div class="control-group" id="weekly_checkboxes_option" style="display:none">
            <div class="controls controls-inner">
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_1" value="day1">SU
                </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_2" value="day2">M
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_3" value="day3">T
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_4" value="day4">W
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_5" value="day5">TH
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_6" value="day6">F
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_7" value="day7">S
              </label>
            </div>
          </div>
        </div>

        <div class="controls">
          <label class="radio">
            <input type="radio" name="frequencyRadio" id="optionsRadios3" value="quarterly"> Quarterly
          </label>

          <div class="control-group" id="quarterly_checkboxes_option" style="display:none">
            <div class="controls controls-inner">
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q1">Q1
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q2">Q2
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q3">Q3
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q4">Q4
              </label>
            </div>
          </div>
        </div>

      </div>
    </fieldset>
  </form>

</div>

<div class="modal-footer">
  <button id="save_report" class="btn btn-primary">Schedule</button>
  <button id="close_modal" class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>