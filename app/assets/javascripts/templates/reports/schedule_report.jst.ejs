<a id="schedule_report" class="btn btn-mini" href="#schedule_report_modal" data-toggle="modal">Schedule</a>

<div id="schedule_report_modal" class="modal hide fade schedule-report-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-body">

    <form class="form-horizontal">
      <legend>Schedule Report</legend>

      <fieldset>
        <div class="control-group">
          <label class="control-label" for="title">Title</label>
          <div class="controls">
            <input type="text" id="title" placeholder="Title">
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="reportDates">Report Dates</label>
          <div class="controls">
            <input type="text" id="report_dates" placeholder="Report Dates" disabled>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Recalculate Dates</label>
          <div class="controls">
            <input type="checkbox" name="recalculateDates" id="recalculate_dates" value="option1">
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="emails">Emails</label>
          <div class="controls">
            <input type="text" id="emails" placeholder="Emails">
          </div>
        </div>
      </fieldset>

      <legend>Reccurrence</legend>
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="startOn">Start On</label>
          <div class="controls">
            <input type="text" id="startOn" placeholder="Start On">
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Ends</label>
          <div class="controls">
            <label class="radio">
              <input type="radio" name="endsOnRadio" id="end_never_radio" value="end_never" checked> Never
            </label>
            <label class="radio">
              <input type="radio" name="endsOnRadio" id="end_date_radio" value="end_date">
              On <input type="text" id="select_end_date" placeholder="Ends On" disabled>
            </label>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Frequency</label>
          <div class="controls">
            <label class="radio">
              <input type="radio" name="optionsFrequency" id="frequency_everyday_radio" value="option1" checked> Everyday
            </label>

            <label class="radio">
              <input type="radio" name="optionsFrequency" id="frequency_specificdays_radio" value="option2"> Specific Days
            </label>

            <label class="radio">
              <input type="radio" name="optionsFrequency" id="frequency_weekly_radio" value="option3"> Weekly
            </label>

            <div class="checkboxes-inner">
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_1" value="day1">SU
                </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_2" value="day2">M
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_3" value="day3">T
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_4" value="day4">W
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_5" value="day5">TH
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_6" value="day6">F
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="weeklyCheckboxes" id="weekly_checkbox_7" value="day7">S
              </label>
            </div>

            <label class="radio">
              <input type="radio" name="optionsFrequency" id="optionsRadios3" value="option4"> Quarterly
            </label>

            <div class="checkboxes-inner">
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q1">Q1
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q2">Q2
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q3">Q3
              </label>
              <label class="checkbox inline">
                <input type="checkbox" name="quarterlyCheckboxes" id="quarterly_checkbox_1" value="q4">Q4
              </label>
            </div>
          </div>
        </div>
      </fieldset>
    </form>

  </div>

  <div class="modal-footer">
    <button class="btn btn-primary">Schedule</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>