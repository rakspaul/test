<div class="activities-header">
    <div class="pure-g">
        <div class="pure-u-1-2">
            <p class="heading">Activity Log</p>
        </div>
        <div class="pure-u-1-3 pull-right">
            <div class="save-comment save-alert-btn-top" title="Filter Alerts" id="btnFilterAlert">
            </div>
            <div class="save-comment save-comment-btn-top" title="Filter Comments" id="btnFilterComment">
            </div>

        </div>
    </div>
    <div class="activities-table">
        <div class="activity-input-control pure-g">
            <div class="username pure-u-1-5">
                <%= window.current_user_name%>
            </div>
            <div class="activities pure-u-1-2">
                  <textarea id="activity_input" placeholder="Note" rows="2" cols="26"></textarea>
            </div>
            <div class="action-controls pure-u-1-4">
                <div class="save-comment" title="Add Attachment">
                    <div id="btnSaveAttachment" class="save-attachment-btn" type="file" name="activity_attachment" data-url="/activity_attachment.json"/>
                </div>
                <div class="save-comment" title="Add Alert" id="btnSaveAlert">
                    <div class="save-alert-btn"></div>
                </div>
                <div class="save-comment" title="Add Task" id="btnShowTaskForm">
                    <div class="save-task-btn"></div>
                </div>
                <div class="save-comment" title="Add Comment" id="btnSaveComment">
                    <div class="save-comment-btn"></div>
                </div>
            </div>
        </div>
        <div id="task_form" class="task_form_region field" style="display: none">
            <div class="pure-u-1-5">
            </div>
            <select id="task-types-selector" class="task-select">
                <option>Task Type</option>
                <option>Creative</option>
                <option>Pixel Request</option>
                <option>Optimization Request</option>
            </select>
            <select id="task-assignee-selector" class="task-select">
                <option>Adele Berkley</option>
                <option>AdOps East</option>
                <option>Adoris Sprinkler</option>
            </select>
            <input type="text" class="span2" value="<%=moment().format("MM-DD-YYYY")%>" id="due-date"/>
            <button type="submit" id="saveTask" class="btn btn-small btn-primary editable-submit"><i class="icon-ok icon-white"></i></button>
        </div>
        <div style="clear:both"/>
        <div style="height: 190px;position:relative;">
            <div style="max-height:100%;overflow-y:auto;"  class="activities-list"></div>
        </div>
        <div class="load-more field">
            <label id="loadMoreBtn">Load More...</label>
            <label id="loadLessBtn" style="display:none">Load Less...</label>
            <label id="loadNormalBtn" style="display:none">Back to normal view...</label>
        </div>
    </div>
    <div class="task-details-table"></div>
</div>

