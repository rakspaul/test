<div class="li-table">
  <div class="li-row">
    <div class="pure-u-1-12 li-number <%= lineitem.active === true ? 'active':'inactive' %>">
      <span>Contract LI<span>
      <div style="clear:both"></div>
      <span class="number"><%= lineitem.alt_ad_id || lineitem.itemIndex %></span>
    </div>

    <div class="pure-u-1-12 start-date">
      <span class="editable custom">
        <%= lineitem.start_date %>
      </span>
    </div>

    <div class="pure-u-1-12 end-date">
      <span class="editable custom">
        <%= lineitem.end_date %>
      </span>
    </div>

    <div class="pure-u-1-6 lineitem-sizes">
      <div class="<%= lineitem.type ? lineitem.type.toLowerCase() : 'display' %>-icon pull-left" title="Media Type"></div>
      <span class="editable">
        <% if (lineitem.type == 'Video') { %>
          Pre-roll
          <% if (lineitem.companion_ad_size) { %>
          with Companion
          <% } %>
          <%= lineitem.master_ad_size.replace(/,/gi, ', ') %>
          <% if (lineitem.companion_ad_size) { %>
            <%= lineitem.companion_ad_size.replace(/,/gi, ', ') %>
          <% } %>
        <% } else { %>
          <%= lineitem.ad_sizes.replace(/,/gi, ', ') %>
        <% } %>
      </span>
      <br/>
      <% if (lineitem.creatives.length > 0) { %>
        <span class="toggle-creatives-btn operation">Show Creatives (<%= lineitem.creatives.length %>)</span>
      <% } %>
    </div>

    <div class="pure-u-1-3 name">
      <span class="editable" data-type="text" data-name="name" data-pk="1" data-inputclass="wide-editable-text">
        <%= lineitem.name %>
      </span>

      <br/>
      <div class="targeting_options_condensed" style="clear:both"></div>
    </div>
      
    <div class="pure-u-1-12 volume number-field">
      <span class="editable">
        <%= accounting.formatNumber(lineitem.volume) %>
      </span>
      <div class="errors_container"></div>
    </div>
    <div class="pure-u-1-12 rate number-field">
      $<span class="editable">
        <%= accounting.formatMoney(lineitem.rate, '') %>
      </span>
    </div>

    <div class="pure-u-1-12 media-cost number-field">
      <span class="number-value">
        $<span><%= accounting.formatMoney(lineitem.value, '') %></span>
      </span>
    </div>
  </div>
</div>

<div class="creatives-list-view" style="display:none"></div>
<div style="clear:both"></div>
