<div class="lineitems-container">
  <div class="header pure-g">
    <div class="pure-u-1-12">&nbsp;</div>
    <div class="pure-u-1-12">Start Date</div>
    <div class="pure-u-1-12">End Date</div>
    <div class="pure-u-1-6">Ad Format / Size</div>
    <div class="pure-u-1-3">Line Items</div>
    <div class="pure-u-1-12">Impressions</div>
    <div class="pure-u-1-12 text-center">CPM (Net)</div>
    <div class="pure-u-1-12">Media Cost (Net)</div>
  </div>
</div>

<div style="clear:both"></div>

<div class="create-li-btn" style="width:70px;">Create LI</div>

<div style="clear:both"></div>

<div class="lineitems-summary-container">
  <div class="summary pure-g">
    <div class="pure-u-2-3">
      <div class="status-btn-container">
        <div class="order-action-buttons">
          <div class="save-order-btn">Save Order</div>
          <div class="push-order-btn">Push</div>
        </div>
        <div>
          <p class="order-status">Status: <%= order_status %></p>
          <p class="order-assignee">Assignee: <%= assignee %></p>
        </div>
      </div>
    </div>
    <div class="pure-u-1-12 totals-label">
      Totals
    </div>
    <div class="pure-u-1-12 total-impressions">
      0
    </div>
    <div class="pure-u-1-12 total-cpm">
      $0.0
    </div>
    <div class="pure-u-1-12 total-media-cost">
      $0.0
    </div>
  </div>
</div>
