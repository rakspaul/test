<div class="pure-u-1-12 li-number <%= lineitem.active === true ? 'active':'inactive' %>">Contract LI</div>

<div class="pure-u-1-12 start-date">
  <span class="editable custom" data-type="date" data-name="start_date" data-date-format="yyyy-mm-dd" data-pk="1">
    <%= lineitem.start_date %>
  </span>
</div>

<div class="pure-u-1-12 end-date">
  <span class="editable custom" data-type="date" data-name="end_date" data-date-format="yyyy-mm-dd" data-pk="1">
    <%= lineitem.end_date %>
  </span>
</div>

<div class="pure-u-1-6">
  <%= lineitem.ad_sizes %>
  <br/>
  <span class="toggle-creatives-btn operation">Edit Creatives</span>
</div>

<div class="pure-u-1-3 name">
  <span class="editable" data-type="text" data-name="name" data-pk="1">
    <%= lineitem.name %>
    <div class="errors" style="clear:both"></div>
  </span>
  <br/>
  <span class="toggle-targeting-btn operation">+ Add Targeting</span>
  <div class="targeting_options_condensed" style="clear:both"></div>
</div>
  
<div class="pure-u-1-12 volume">
  <span class="editable custom" data-type="text" data-name="volume" data-pk="1">
    <%= lineitem.volume %>
  </span>
</div>
<div class="pure-u-1-12 rate">
  <span class="editable" data-type="text" data-name="rate" data-pk="1">
    <%= accounting.formatMoney(lineitem.rate) %>
  </span>
</div>

<div class="pure-u-1-12 media-cost">
  <span class="editable" data-type="text" data-name="media_cost" data-pk="1">
    <%= accounting.formatMoney(lineitem.volume / 1000 * lineitem.rate) %>
  </span>
</div>

<div class="ads-container">
</div>

<div class="targeting-container" style="display:none">
</div>

<div class="creatives-list-view" style="display:none">
</div>
