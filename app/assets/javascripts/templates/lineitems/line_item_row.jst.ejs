<div class="pure-u-1-12 li-number <%= lineitem.active === true ? 'active':'inactive' %>">Contract LI</div>
<div class="pure-u-1-12 start-date"><%= lineitem.start_date %></div>
<div class="pure-u-1-12 end-date"><%= lineitem.end_date %></div>
<div class="pure-u-1-6">
  <%= lineitem.ad_sizes %>
  <br/>
  <span class="operation">Edit Creatives</span>
</div>

<div class="pure-u-1-3 name">
  <%= lineitem.name %>
  <br/>
  <span class="operation">+ Add Targeting</span>
</div>
  
<div class="pure-u-1-12 volume"><%= accounting.formatNumber(lineitem.volume) %></div>
<div class="pure-u-1-12 rate"><%= accounting.formatMoney(lineitem.rate) %></div>
<div class="pure-u-1-12 media-cost"><%= accounting.formatMoney(lineitem.volume / 1000 * lineitem.rate) %></div>

<div class="ads-container">
</div>
