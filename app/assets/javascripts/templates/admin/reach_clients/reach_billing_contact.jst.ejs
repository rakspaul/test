<div class="modal-body">

  <form>
    <legend>New Billing Contact</legend>

    <fieldset>
      <div >
        <label for="name">Name</label>
        <div >
          <input type="text" id="name" placeholder="Name" required>
          <label class="help-inline form-error" id="name_error"></label>
        </div>
      </div>

      <div>
        <label for="phone">Phone</label>
        <div >
          <input type="text" id="phone" placeholder="Phone" required>
          <label class="help-inline form-error" id="phone_error"></label>
        </div>
      </div>

      <div>
        <label for="email">Email</label>
        <div >
          <input type="text" id="email" placeholder="Email" required>
          <label class="help-inline form-error" id="email_error"></label>
        </div>
      </div>
    </fieldset>
  </form>

</div>

<div class="modal-footer">
  <button type="button" id="save_billing_contact" class="btn btn-primary">Save</button>
  <button id="close_modal" class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>