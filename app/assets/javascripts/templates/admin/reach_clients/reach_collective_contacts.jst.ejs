<div class="control-group">
  <label for="sales_person" class="control-label">Sales Person</label>
  <div class="controls">
    <select id="sales_person">
      <% salesPerson.each(function(item){ %>
        <% if(selected_sales_person_id && item.id === selected_sales_person_id) { %>
          <option selected value="<%= item.id %>"> <%= item.getFullName() %> </option>
        <% } else { %>
          <option value="<%= item.id %>"> <%= item.getFullName() %> </option>
        <% } %>
      <%}); %>
    </select>
  </div>
</div>

