!!!
%html{'ng-app' => "cdeskApp"}
  %head
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "Reporting"
    %meta{:content => "Collective Desk UI", :name => "description"}
    %meta{:content => "Collective", :name => "author"}
    %link{:rel => "shortcut icon", :href => "http://collective.com/_images/collective.png", :type => "image/x-icon"}

    :javascript
      window.scala_api                = "#{scala_api_url}";
      window.nodejs_api                = "#{nodejs_api_url}";

    = stylesheet_link_tag    "cdesk_application", :media => "all"
    = stylesheet_link_tag    "//fonts.googleapis.com/css?family=Armata"
    = javascript_include_tag "cdesk_application"
    = csrf_meta_tags

    != render :partial => 'layouts/ga'
    = yield(:head)

  %body
    - if cookies[:cdesk_session]
      %header





  = content_for?(:content) ? yield(:content) : yield
  
  :javascript
    window.assets                   = {};
    window.assets.target_marker     = "#{image_path('cdesk/icn_goal.png')}";
    window.assets.platform_icon     = "#{image_path('tag_icon.png')}";