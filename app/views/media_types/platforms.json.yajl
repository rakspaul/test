json = {}
@media_types.map do |media_type|
  json[media_type.category] = {
    id:        media_type.id,
    platforms: []
  }

  media_type.platforms.each do |platform|
    json[media_type.category][:platforms] << {
      id:                platform.id,
      name:              platform.name,
      dfp_key:           platform.dfp_key,
      naming_convention: platform.naming_convention,
      ad_type:           platform.ad_type,
      priority:          platform.priority
    }
  end
end
