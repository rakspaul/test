%h1#header
= link_to "Create New Report", new_reports_report_path

.pure-g.orderReportsMain
  .selectedDimensions
  .pure-u-1-6.orderRepLeftCol
    #draggable.draggable
      .reportDateHeader
        Choose Date Range
      .selectDateRange
        %span#report_date{:name => "report_date", :class=>"reportDate"}
          %i.icon-calendar.icon-large
          %span
          %b.caret

      .dimensionsHeader         
        .dimLabel
          Add Dimensions
        %span.arrow-down
      .dimensionsBody
        %ul.dimensions
          %li Advertiser
          %li Order
          %li Ads
          / %li Order Start Date
          / %li Order End Date
          / %li Line Item
          / %li Line Item Start Date
          / %li Line Item End Date
          / %li Creative
          / %li Ad Size
          / %li PO Number
          / %li Days in Campaign
          / %li Days Complete
          / %li Days Remaining
          / %li Media Spend
          / %li Media Type
          / %li Video Length
          / %li Ad Priority
          / %li Salesperson 

      .dimensionsHeader
        .dimLabel
          Add Standard Metrics
        %span.arrow-down
      .dimensionsBody
        %ul.dimensions
          %li Ad Impressions Booked(Lifetime)
          %li Ad Impressions Delivered(Lifetime)
          %li Ad OSI(Lifetime)
          %li Clicks(Lifetime)
          %li CTR(Date Range)
          %li Impressions Delivered(Date Range)
          %li Clicks(Date Range)
          %li CTR(Date Range)
          %li Order Level OSI(Lifetime)
          %li eCPM

      .dimensionsHeader
        .dimLabel
          Add Video Metrics
        %span.arrow-down
      .dimensionsBody
        %ul.dimensions
          %li Impressions(v)
          %li Clicks(V)
          %li CTR%(V)
          %li Video Plays(V)
          %li Play Rate(V)
          %li Completion Rate(V)

      .dimensionsHeader
        .dimLabel
          Add Engagement Metrics
        %span.arrow-down
      .dimensionsBody
        %ul.dimensions
          %li Impressions(E)
          %li Clicks(E)
          %li Interactions(E)
          %li Interaction Rate(E)
          %li Avg Interaction Time(E)
          %li Views(E)
          %li Avg. View Time(E)
          %li Media Spend
          %li eCPM(E)

      .dimensionsHeader
        .dimLabel
          Run/Schedule Report
        %span.arrow-down
      .dimensionsBody
        .dimensionsInner
          %button.btn.btn-mini{:type => "button"} Go!
          %button.btn.btn-mini{:type => "button"} Stop
          %button.btn.btn-mini{:type => "button"} Schedule

      .dimensionsHeader
        .dimLabel
          Export/Share options
        %span.arrow-down
      .dimensionsBody
        .dimensionsInner
          %button.btn.btn-mini.btn-primary{:type => "button"} Excel
          %button.btn.btn-mini.btn-primary{:type => "button"} Email

  .pure-u-5-6.orderRepRightCol
    #droppable.droppable
      %table{:id => "ordersReportTable", :class => "table table-striped table-bordered"}
        %thead
        %tbody
      .placeholder
        Please drop here dimensions
      .ajax_loader
        = image_tag "loading.gif"


%script{:type => "text/template", :id=>"orders_reports_headers_temp"}
  :plain
    <tr>
      <th>Name</th>
      <th>Imps</th>
      <th>Clicks</th>
      <th>CTR%</th>        
      <th>PCCR %</th>
      <th>Total Actions</th>
      <th>AR%</th>
      <th>Gross Rev</th>
      <th>Gross eCMP</th>
      <th>eCPM</th>
      <th>eCPA</th>
    </tr>

%script{:type => "text/template", :id=>"orders_reports_body_temp"}
  :plain
    <tr class="<%= id %>_parent">
      <td><span class="accIcon icon-plus-sign"></span> <a class="dimName" disabled="disabled" data-id="<%= id %>"><%= name %></a></td>
      <td><%= impressions %></td>
      <td><%= clicks %></td>
      <td><%= ctr %></td>
      <td><%= pccr %></td>
      <td><%= actions %></td>
      <td><%= ar %></td>
      <td><%= gross_rev %></td>
      <td><%= gross_ecpm %></td>
      <td><%= net_ecpc %></td>
      <td><%= net_ecpa %></td>
    </tr>

%script{:type => "text/template", :id=>"orders_reports_body_temp_high"}
  :plain
    <tr class="highlightCol <%= expandID %>_child">
      <td><%= name %></td>
      <td><%= impressions %></td>
      <td><%= clicks %></td>
      <td><%= ctr %></td>
      <td><%= pccr %></td>
      <td><%= actions %></td>
      <td><%= ar %></td>
      <td><%= gross_rev %></td>
      <td><%= gross_ecpm %></td>
      <td><%= net_ecpc %></td>
      <td><%= net_ecpa %></td>
    </tr>


:javascript
  $(document).ready(function() {
    var reports = ReachUI.Reports.List();
    reports.init("#header", "Report list page");
    reports.renderText();

    var reportsDimnsions = ReachUI.Reports.Dimensions();
    reportsDimnsions.init();            

  });

  